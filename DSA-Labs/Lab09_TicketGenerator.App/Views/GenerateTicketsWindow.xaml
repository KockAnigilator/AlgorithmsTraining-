<Window x:Class="Lab09_TicketGenerator.App.Views.GenerateTicketsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Генерация билетов" Height="500" Width="600"
        WindowStartupLocation="CenterOwner">

    <DockPanel Margin="10">
        <!-- Панель управления -->
        <StackPanel DockPanel.Dock="Top" Orientation="Vertical" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Количество билетов:" VerticalAlignment="Center"/>
                <TextBox x:Name="TxtTicketCount" Text="10" Width="50" Margin="10,0,20,0"/>

                <Label Content="Режим:" VerticalAlignment="Center"/>
                <ComboBox x:Name="CmbMode" Width="120" Margin="10,0,0,0">
                    <ComboBoxItem Content="Стандартный" IsSelected="True"/>
                    <ComboBoxItem Content="Сбалансированный"/>
                    <ComboBoxItem Content="Смешанный"/>
                </ComboBox>

                <Button Content="Сгенерировать" Click="Generate_Click" 
                        Margin="20,0,0,0" Padding="10,5"/>
            </StackPanel>

            <TextBlock x:Name="TxtStatus" Text="" Foreground="Blue"/>
        </StackPanel>

        <!-- Список билетов -->
        <TabControl>
            <TabItem Header="Билеты">
                <ListBox x:Name="TicketsList" DisplayMemberPath="Name"/>
            </TabItem>

            <TabItem Header="Предпросмотр">
                <TextBox x:Name="TxtPreview" IsReadOnly="True" 
                         VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                         TextWrapping="Wrap"/>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>