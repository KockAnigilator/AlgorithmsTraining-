<Window x:Class="Lab09_TicketGenerator.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Генератор экзаменационных билетов" 
        Height="450" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">

    <DockPanel>
        <!-- Меню -->
        <Menu DockPanel.Dock="Top" Background="White">
            <MenuItem Header="Файл">
                <MenuItem Header="Выход" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Справка">
                <MenuItem Header="О программе" Click="About_Click"/>
            </MenuItem>
        </Menu>

        <!-- Статус бар -->
        <StatusBar DockPanel.Dock="Bottom" Background="LightGray">
            <StatusBarItem>
                <TextBlock x:Name="TxtStatus" Text="Готов к работе"/>
            </StatusBarItem>
        </StatusBar>

        <!-- Основное содержимое -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <Label Grid.Row="0" Content="Генератор экзаменационных билетов" 
                   FontSize="16" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="10" Padding="10"/>

            <!-- Панель кнопок -->
            <StackPanel Grid.Row="1" Orientation="Vertical" Margin="20">
                <Button x:Name="BtnManageQuestions" Content="Управление вопросами" 
                        Height="35" Margin="0,5" FontSize="14"
                        Click="BtnManageQuestions_Click"/>

                <Button x:Name="BtnSettings" Content="Настройки билетов" 
                        Height="35" Margin="0,5" FontSize="14"
                        Click="BtnSettings_Click"/>

                <Button x:Name="BtnGenerateTickets" Content="Генерация билетов" 
                        Height="35" Margin="0,5" FontSize="14"
                        Click="BtnGenerateTickets_Click"/>

                <Button x:Name="BtnViewQuestions" Content="Просмотр всех вопросов" 
                        Height="35" Margin="0,5" FontSize="14"
                        Click="BtnViewQuestions_Click"/>

                <!-- Статистика -->
                <GroupBox Header="Статистика" Margin="0,20,0,0" Padding="10">
                    <StackPanel>
                        <TextBlock x:Name="TxtPracticeCount" Text="Практика: загрузка..." Margin="0,2"/>
                        <TextBlock x:Name="TxtLectureCount" Text="Лекции: загрузка..." Margin="0,2"/>
                        <TextBlock x:Name="TxtBlitzCount" Text="Блиц: загрузка..." Margin="0,2"/>
                        <TextBlock x:Name="TxtTotalCount" Text="Всего: загрузка..." Margin="0,2"/>
                        <TextBlock x:Name="TxtTopicsCount" Text="Тем: загрузка..." Margin="0,2"/>
                        <TextBlock x:Name="TxtGenerationStatus" Text="Статус: проверка..." 
                                   FontWeight="Bold" Margin="0,5,0,0" Foreground="DarkBlue"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>