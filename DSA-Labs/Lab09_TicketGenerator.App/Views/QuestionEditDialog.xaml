<Window x:Class="Lab09_TicketGenerator.App.Views.QuestionEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование вопроса" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <StackPanel Margin="20">
        <Label Content="Текст вопроса:"/>
        <TextBox x:Name="TxtText" Height="100" TextWrapping="Wrap" AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto" Margin="0,0,0,10"/>

        <Label Content="Тип вопроса:"/>
        <ComboBox x:Name="CmbType" Margin="0,0,0,10">
            <ComboBoxItem Content="Practice" IsSelected="True"/>
            <ComboBoxItem Content="Lecture"/>
            <ComboBoxItem Content="Blitz"/>
        </ComboBox>

        <Label Content="Тема:"/>
        <TextBox x:Name="TxtTopic" Margin="0,0,0,10"/>

        <Label Content="Сложность (1-10):"/>
        <TextBox x:Name="TxtDifficulty" Text="5" Margin="0,0,0,20"/>

        <CheckBox x:Name="ChkActive" Content="Активный вопрос" IsChecked="True" Margin="0,0,0,20"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Click="Save_Click" Padding="10,5" Margin="0,0,10,0"/>
            <Button Content="Отмена" Click="Cancel_Click" Padding="10,5"/>
        </StackPanel>
    </StackPanel>
</Window>