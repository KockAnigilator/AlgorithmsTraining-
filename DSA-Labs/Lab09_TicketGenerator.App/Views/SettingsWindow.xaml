<Window x:Class="Lab09_TicketGenerator.App.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки билетов" Height="400" Width="400"
        WindowStartupLocation="CenterOwner">

    <StackPanel Margin="20">
        <GroupBox Header="Основные настройки" Padding="10" Margin="0,0,0,10">
            <StackPanel>
                <Label Content="Вопросов в билете:"/>
                <TextBox x:Name="TxtQuestionsPerTicket" Text="4" Margin="0,0,0,10"/>

                <Label Content="Максимальная сложность билета:"/>
                <TextBox x:Name="TxtMaxDifficulty" Text="20" Margin="0,0,0,10"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Количество вопросов по типам" Padding="10" Margin="0,0,0,10">
            <StackPanel>
                <Label Content="Практические вопросы:"/>
                <TextBox x:Name="TxtPracticeCount" Text="1" Margin="0,0,0,10"/>

                <Label Content="Теоретические вопросы:"/>
                <TextBox x:Name="TxtLectureCount" Text="2" Margin="0,0,0,10"/>

                <Label Content="Блиц-вопросы:"/>
                <TextBox x:Name="TxtBlitzCount" Text="1" Margin="0,0,0,10"/>
            </StackPanel>
        </GroupBox>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Click="Save_Click" Padding="10,5" Margin="0,0,10,0"/>
            <Button Content="Отмена" Click="Cancel_Click" Padding="10,5"/>
        </StackPanel>
    </StackPanel>
</Window>